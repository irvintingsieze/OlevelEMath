<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.studentguide.android.olevelemath.my.studentguide.android.olevelemath.Secondary4.sec4_selection"
    android:background="@drawable/cover_page1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/round_rect"
        android:text="LEARN"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="75dp"
        android:textSize="50sp"
        android:onClick="sec4Learn"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/round_rect"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="75dp"
        android:text="PRACTICE"
        android:textSize="50sp"
        android:onClick="sec4Practice"
        />



</LinearLayout>
