<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover_page1"
    android:orientation="vertical"
    tools:context="com.studentguide.android.olevelemath.my.studentguide.android.olevelemath.Secondary3.S3topics.practice_qsn.linear_ineq_practice">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/score_linear"
        android:layout_weight="1"
        android:gravity="center"

        />
    <TextView
        android:id="@+id/linear_qn"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_weight="3"

        />

    <Button
        android:id="@+id/qnopt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect"
        android:layout_margin="40dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/qnopt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect"
        android:layout_margin="40dp"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/qnopt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect"
        android:layout_margin="40dp"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/qnopt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect"
        android:layout_margin="40dp"
        android:layout_weight="1"
        />

</LinearLayout>
